generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    String  @id @default(uuid())
  email String  @unique
  name  String //can be null if ?
  password String
  tasks Tasks[] //define the relationship
}

model Tasks {
  id      Int     @id @default(autoincrement())
  title   String
  content String?
  user    User    @relation(fields: [userID], references: [id], onDelete: Cascade) //when user deleted all task gone
  userID  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
